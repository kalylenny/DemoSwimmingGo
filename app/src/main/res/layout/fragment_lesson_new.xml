<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorWhite"
    tools:context=".view.coach.fragment.LessonNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_profile_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="5sp">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tạo bài học mới"
            android:textColor="@color/colorWhite"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài học"
                android:textColor="@color/colorGray" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:ems="11" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:textAllCaps="false"
                android:paddingRight="50dp"
                android:paddingLeft="80dp"
                android:drawableLeft="@drawable/ic_warmup"
                android:background="@color/colorWhite"
                android:text="Warm up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:textAllCaps="false"
                android:paddingRight="50dp"
                android:paddingLeft="80dp"
                android:drawableLeft="@drawable/ic_mainswim"
                android:background="@color/colorWhite"
                android:text="Main stroke"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:textAllCaps="false"
                android:paddingRight="50dp"
                android:paddingLeft="80dp"
                android:drawableLeft="@drawable/ic_finalswim"
                android:background="@color/colorWhite"
                android:text="Final set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:textAllCaps="false"
                android:paddingRight="50dp"
                android:paddingLeft="80dp"
                android:drawableLeft="@drawable/ic_relax"
                android:background="@color/colorWhite"
                android:text="Swim down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_login_border"
            android:text="Tạo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>